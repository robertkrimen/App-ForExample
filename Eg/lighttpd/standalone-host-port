server.modules += ( "mod_fastcgi" )

$HTTP["host"] =~ "^(www.)?eg.localhost" {
    fastcgi.server = (
        "" => (
            "eg" => (
                
                "host" => "127.0.0.1",
                "port" => 45450,
                
                "check-local" => "disable"
            )
        )
    )
}
